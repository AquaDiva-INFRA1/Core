@model BExIS.Web.Shell.Areas.RPM.Models.MessageModel

@if(!Model.hasMessage)
{
    <div class="bx-rpm-message" value="@Model.hasMessage" id="@Model.CssId">
        @Model.Message
        <div id="buttons">
            <button class="bx-button small function" onclick="deleteMessageYes(@Model.CssId)" id="yesButton">Yes</button>
            <button class="bx-button small function" onclick="deleteMessageCancel()" id="noButton">No</button>
        </div>
    </div>
}
else if (Model.hasMessage)
{
    <div class="bx-rpm-message" value="@Model.hasMessage" id="@Model.CssId">
        @Model.Message
        <div id="buttons">
            <button class="bx-button small function" onclick="deleteMessageCancel()" id="okButton">OK</button>
        </div>
    </div>
}