@using Telerik.Web.Mvc.UI
@using BExIS.Web.Shell.Areas.RBM.Models.Booking;
@using BExIS.Rbm.Entities.BookingManagementTime;

@model ScheduleDurationModel
<table>
    <tr>
    <td style="width:100px;">@Html.LabelFor(m => m.StartDate)</td>
    <td style="width:250px;">
        @if ((Model.EditMode && Model.EditAccess) || Model.EventId == 0)
        {
            if (Model.TimeUnit == SystemDefinedUnit.day || Model.TimeUnit == SystemDefinedUnit.month || Model.TimeUnit == SystemDefinedUnit.week || Model.TimeUnit == SystemDefinedUnit.year)
            {
               @Html.Telerik().DatePickerFor(m => m.StartDate).Name("Start_" + @Model.Index.ToString()).Value(Model.StartDate).ClientEvents(events => events.OnChange("onChangeControl"))
             }
             else
            {
                @Html.Telerik().DateTimePickerFor(m => m.StartDate).Name("Start_" + @Model.Index.ToString()).Value(Model.StartDate).ClientEvents(events => events.OnChange("onChangeControl"))
            }
        }
        else
        {
            if (Model.TimeUnit == SystemDefinedUnit.day || Model.TimeUnit == SystemDefinedUnit.month || Model.TimeUnit == SystemDefinedUnit.week || Model.TimeUnit == SystemDefinedUnit.year)
            {
                @Html.Telerik().DatePickerFor(m => m.StartDate).Name("Start_" + @Model.Index.ToString()).Value(Model.StartDate).Enable(false)

            }
            else
            {
                @Html.Telerik().DateTimePickerFor(m => m.StartDate).Name("Start_" + @Model.Index.ToString()).Value(Model.StartDate).Enable(false)
            }
        }

    </td>
    <td style="width:100px;">@Html.LabelFor(m => m.EndDate)</td>
    <td style="width:250px;">
        @if ((Model.EditMode && Model.EditAccess) || Model.EventId == 0)
        {
            if (Model.TimeUnit == SystemDefinedUnit.day || Model.TimeUnit == SystemDefinedUnit.month || Model.TimeUnit == SystemDefinedUnit.week || Model.TimeUnit == SystemDefinedUnit.year)
            {
                @Html.Telerik().DatePickerFor(m => m.EndDate).Name("End_" + @Model.Index.ToString()).Value(Model.EndDate).ClientEvents(events => events.OnChange("onChangeControl"))

            }
            else {

                @Html.Telerik().DateTimePickerFor(m => m.EndDate).Name("End_" + @Model.Index.ToString()).Value(Model.EndDate).ClientEvents(events => events.OnChange("onChangeControl"))
            }
        }
        else
        {
            if (Model.TimeUnit == SystemDefinedUnit.day || Model.TimeUnit == SystemDefinedUnit.month || Model.TimeUnit == SystemDefinedUnit.week || Model.TimeUnit == SystemDefinedUnit.year)
            {
                @Html.Telerik().DatePickerFor(m => m.EndDate).Name("End_" + @Model.Index.ToString()).Value(Model.EndDate).Enable(false)
            }
            else
            {
                @Html.Telerik().DateTimePickerFor(m => m.EndDate).Name("End_" + @Model.Index.ToString()).Value(Model.EndDate).Enable(false)
            }

        }
    </td>


    </tr>
</table>

<script type="text/javascript">

    $(document).ready(function () {
            resetAllTelerikIconTitles();
            addTooltips();
        })
</script>