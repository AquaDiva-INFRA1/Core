@using Telerik.Web.Mvc.UI;

<!--Search bar and search button-->
<div id="searchHeader">
    @using (Html.BeginForm("Index", "SemanticSearch", new { area = "DDM" }))
    {
        <table>
            <tr>
                <td>
                    <!--Search bar-->
                    @(Html.Telerik().AutoComplete().Multiple()
                                    .Name("searchTerm")
                                    .DataBinding(dataBinding => dataBinding
                                        .Ajax().Select("getAutocompletionFromFile", "SemanticSearch")
                                        .Cache(false))
                                    .Filterable(filtering =>
                                    {
                                        filtering.FilterMode(AutoCompleteFilterMode.StartsWith);
                                        filtering.MinimumChars(3);
                                    })
                    )
                </td>
                <td>
                    <!--Search button-->
                    <button class="bx-button function" type="submit">Search</button>
                </td>
            </tr>
        </table>
    }
</div>