@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model List<UserMembershipGridRowModel>

@(Html.Telerik().Grid(Model)
    .Name("Grid_Membership")
    .HtmlAttributes(new { style = "width: 800px" })
    .DataKeys(keys =>
    {
        keys.Add(m => m.Id);
    })
    .Columns(columns =>
    {
        columns.Bound(m => m.IsUserInGroup)
            .ClientTemplate("<input type='checkbox' onclick='setMembership(this.checked, <#= UserId #>, <#= Id #>);' name='nothing' <#= IsUserInGroup ? checked='checked' : '' #> />")
                   .Title("Member")
                   .Width(64)
                   .Filterable(false)
                   .HtmlAttributes(new { style = "text-align:center" });
        columns.Bound(m => m.Id);
        columns.Bound(m => m.GroupName);
        columns.Bound(m => m.Description);
    })
    .DataBinding(dataBinding => dataBinding
        .Ajax()
        .Select("Membership_Select", "Users", (long)ViewData["UserId"])
    )
    .Filterable()
    .Sortable(sortable => sortable
        .OrderBy(orderby => orderby
            .Add(m => m.GroupName)
            .Ascending()
        )
    )
    .Scrollable(scrollable => scrollable.Height(475))
)