@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model long

@(Html.Telerik().TabStrip()
    .Name("tabstripDetails")
    .Items(items =>
    {
        items.Add()
            .Text("User Info")
            .LoadContentFrom("UserInfo", "Users", new { Id = (long)Model });

        items.Add()
        .Text("Membership")
        .LoadContentFrom("Membership", "Users", new { Id = (long)Model });
    })
    .SelectedIndex(0)
)