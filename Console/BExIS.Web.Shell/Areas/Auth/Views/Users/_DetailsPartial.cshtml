@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model long

@(Html.Telerik().TabStrip()
    .Name("TabStrip_Details")
    .Items(items =>
    {
        items.Add()
            .Text("User Info")
            .Content(@<text>
                <div id="Content_UserInfo"></div>
            </text>)
            .Selected(true);
    
        items.Add()
            .Text("Membership")
            .Content(@<text>
                <div id="Content_Membership"></div>
            </text>);
    })
    .ClientEvents(clientEvents => clientEvents
        .OnSelect("function(e) { TabStrip_Details_OnSelect.call(this,e," + Model + "); }")
    )
)