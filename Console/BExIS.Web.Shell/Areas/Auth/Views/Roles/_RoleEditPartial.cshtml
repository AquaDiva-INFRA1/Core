@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model RoleModel

@using (Ajax.BeginForm("RoleEdit", "Roles", new AjaxOptions { HttpMethod = "POST", UpdateTargetId="Content_RoleInfo" }))
{   
    @Html.ValidationSummary(true)
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.Id)
    </div>
    <div class="editor-field">
        @Html.DisplayFor(m => m.Id)
        @Html.HiddenFor(m => m.Id)
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.RoleName)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.RoleName)
        @Html.ValidationMessageFor(m => m.RoleName)
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.Description)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Description, new { style = "width: 275px; height: 100px;max-width: 350px; max-height: 200px; word-wrap:break-word" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    
    <p>
        <button type="submit">Save</button>
        <button type="reset" onclick="$(this).resetValidation()">Reset</button>
        <button type="button" onclick="TabStrip_RoleInfo_CancelEdit(@Model.Id)">Cancel</button>
    </p>
}

<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#Content_RoleInfo");
    });
</script>