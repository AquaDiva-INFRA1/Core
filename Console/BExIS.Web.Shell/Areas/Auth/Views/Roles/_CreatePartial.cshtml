@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model RoleCreationModel

@using (Ajax.BeginForm("Create", "Roles", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Content_Creation" }))
{   
    @Html.ValidationSummary(true)
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.RoleName)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.RoleName)
        @Html.ValidationMessageFor(m => m.RoleName)
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.Description)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Description, new { style = "width: 275px; height: 100px; max-width: 350px; max-height: 200px" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    
    <p>
        <button type="submit">Create</button>
        <button type="reset">Reset</button>
        <button type="button" onclick="Window_Creation_Cancel()">Cancel</button>
    </p>
}

<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#Content_Creation");
    });
</script>