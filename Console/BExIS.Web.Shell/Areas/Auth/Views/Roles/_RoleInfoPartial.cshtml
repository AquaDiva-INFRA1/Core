@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model RoleModel

@using (Html.BeginForm())
{       
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.Id)
    </div>
    <div class="editor-field">
        @Html.DisplayFor(m => m.Id)
        @Html.HiddenFor(m => m.Id)
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.RoleName)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.RoleName, new { @readonly = "readonly" })
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.Description)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Description, new { @readonly = "readonly", style = "width: 275px; height: 100px; max-width: 350px; max-height: 200px; wrap: hard" })
    </div>
    
    <p>
        <button type="button" onclick="TabStrip_RoleInfo_Edit(@Model.Id)">Edit</button>
    </p>
}