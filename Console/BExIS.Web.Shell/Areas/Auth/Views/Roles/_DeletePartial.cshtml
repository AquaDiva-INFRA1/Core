@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model RoleModel

<script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("Delete", "Roles", new AjaxOptions { HttpMethod = "POST" }))
{       
    <div class="editor-label">
        @Html.LabelFor(m => m.Id)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Id, new { disabled = true })
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(m => m.RoleName)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.RoleName, new { disabled = true })
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(m => m.Description)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Description, new { disabled = true, style = "width: 275px; height: 100px; resize: none" })
    </div>

    <div class="editor-label">
        @Html.LabelFor(m => m.Comment)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Comment, new { disabled = true, style = "width: 275px; height: 100px; resize: none" })
    </div>
    
    <p>
        <button type="submit">Delete</button>
        <button type="button" onclick="cancelWindowDeletion()">Cancel</button>
    </p>
}