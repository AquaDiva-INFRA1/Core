@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model DataPermissionCreationModel

@using (Ajax.BeginForm("CreateDataPermission", "Permissions", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Content_Creation" }))
{   
    @Html.ValidationSummary(true)
        
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.SubjectId)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(m => m.SubjectId, new SelectList(Model.SubjectsList, "Id", "Name"))
        @Html.ValidationMessageFor(m => m.SubjectId)
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.EntityName)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(m => m.EntityName, new SelectList(Model.EntitiesList, "Id", "Name"))
        @Html.ValidationMessageFor(m => m.EntityName)
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.Read)
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(m => m.Read)
        @Html.ValidationMessageFor(m => m.Read)
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.Update)
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(m => m.Update)
        @Html.ValidationMessageFor(m => m.Update)
    </div>
    
    <div class="editor-label" style="font-weight:bold">
        @Html.LabelFor(m => m.Delete)
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(m => m.Delete)
        @Html.ValidationMessageFor(m => m.Delete)
    </div>
    
    <p>
        <button type="submit">Create</button>
        <button type="reset">Reset</button>
        <button type="button" onclick="Window_Creation_Cancel()">Cancel</button>
    </p>
}

<script type="text/javascript">
    $(document).ready(function () {
        $.validator.unobtrusive.parse("#Content_Creation");
    });
</script>