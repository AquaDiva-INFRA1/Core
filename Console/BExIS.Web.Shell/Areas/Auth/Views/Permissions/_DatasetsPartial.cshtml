@using Telerik.Web.Mvc.UI
@using BExIS.Web.Shell.Areas.Auth.Models;

@(Html.Telerik().Grid(new List<DatasetModel>())
        .Name("Grid_Datasets")
        .DataKeys(keys =>
        {
            keys.Add(d => d.Id);
        })
        .Columns(columns =>
        {
            columns.Bound(d => d.Id);
            columns.Bound(d => d.Version);
            columns.Bound(d => d.Title);
            columns.Bound(d => d.Owner);
            columns.Bound(d => d.TechnicalContact);
            columns.Bound(d => d.ContentContact);
        })
        .DataBinding(dataBinding => dataBinding
                .Ajax()
                .Select("Datasets_Select", "Permissions")
        )
        .ClientEvents(events => events.OnRowSelected("OnRowSelected"))
        .Filterable()
        .Sortable(sortable => sortable
            .OrderBy(orderby => orderby
                .Add(r => r.Id).Descending()))
        .Scrollable(scrollable => scrollable.Height(275))
        .Selectable()

)