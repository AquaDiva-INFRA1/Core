@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model GroupUpdateModel

@using (Ajax.BeginForm("Edit", "Groups", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tabs-1" }))
{       
    @Html.ValidationSummary(true)

    <div id="accordion">
            
        <h3 style="font-weight:bold">Group Information</h3>
        <div>
    
            <div class="editor-label" style="font-weight:bold">
                @Html.LabelFor(m => m.Id)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(m => m.Id)
                @Html.HiddenFor(m => m.Id)
            </div>
            
            <div class="editor-label" style="font-weight:bold">
                @Html.LabelFor(m => m.GroupName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.GroupName)
                @Html.ValidationMessageFor(m => m.GroupName)
            </div>
            
            <div class="editor-label" style="font-weight:bold">
                @Html.LabelFor(m => m.Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Description, new { style = "width: 275px; height: 100px;max-width: 350px; max-height: 200px; word-wrap:break-word" })
                @Html.HiddenFor(m => m.Description)
            </div>

        </div>

    </div>
    
    <p>
        <button type="submit">Save</button>
        <button type="reset" onclick="$(this).resetValidation()">Reset</button>
        <button type="button" onclick="Window_Update_Show(@Model.Id)">Show</button>
        <button type="button" onclick="Window_Update_Cancel()">Cancel</button>
    </p>
}

<script type="text/javascript">
    $("#accordion").accordion({
        heightStyle: "content"
    });
</script>