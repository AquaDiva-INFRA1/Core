@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model GroupReadModel

@using (Html.BeginForm())
{
      
    <div id="accordion">
            
        <h3 style="font-weight:bold">Group Information</h3>
        <div>
            <div class="editor-label" style="font-weight:bold">
                @Html.LabelFor(m => m.Id)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(m => m.Id)
                @Html.HiddenFor(m => m.Id)
            </div>
            
            <div class="editor-label" style="font-weight:bold">
                @Html.LabelFor(m => m.GroupName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.GroupName, new { disabled = "disabled" })
            </div>
            
            <div class="editor-label" style="font-weight:bold">
                @Html.LabelFor(m => m.Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Description, new { disabled = "disabled", style = "min-width: 275px; min-height: 100px; max-width: 350px; max-height: 200px;" })
            </div>
        </div>

    </div>

    <p>
        <button type="button" onclick="Window_Update_Edit(@Model.Id)">Edit</button>
        <button type="button" onclick="Window_Update_Cancel()">Cancel</button>
    </p>
}

<script type="text/javascript">
    $("#accordion").accordion({
        heightStyle: "content"
    });
</script>