@using Telerik.Web.Mvc.UI;
@using BExIS.Web.Shell.Areas.Auth.Models;

@model GroupCreateModel

@using (Ajax.BeginForm("Create", "Groups", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Content_Creation" }))
{   
    @Html.ValidationSummary(true)

    <div id="accordion">
    
        <h3 style="font-weight:bold">Group Information</h3>
        <div>

            <div class="editor-label" style="font-weight:bold">
                @Html.LabelFor(m => m.GroupName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.GroupName)
                @Html.ValidationMessageFor(m => m.GroupName)
            </div>
            
            <div class="editor-label" style="font-weight:bold">
                @Html.LabelFor(m => m.Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Description, new { style = "width: 275px; height: 100px; max-width: 350px; max-height: 200px" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>

        </div>

    </div>
    
    <p>
        <button type="submit">Create</button>
        <button type="reset">Reset</button>
        <button type="button" onclick="Window_Creation_Cancel()">Cancel</button>
    </p>
}

<script type="text/javascript">
    $("#accordion").accordion({
        heightStyle: "content"
    });
</script>