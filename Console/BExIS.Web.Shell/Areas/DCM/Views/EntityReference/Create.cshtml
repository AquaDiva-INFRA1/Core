
@model BExIS.Modules.Dcm.UI.Models.EntityReference.CreateSimpleReferenceModel

@{
    ViewBag.Title = "Create";

    SelectList typeList = null;
    SelectList targetList = null;

    string title = "Not available";

    if (ViewData["Types"] != null)
    {
        typeList = (SelectList)ViewData["Types"];
    }

    if (ViewData["Target"] != null)
    {
        targetList = (SelectList)ViewData["Target"];
    }

    if (ViewData["Title"] != null)
    {
        title = ViewData["Title"].ToString();
    }

    title += " ("+Model.SourceId+")"; 
}

@section scripts
{
    <script src="@Url.Content("~/Areas/Dcm/Scripts/entity.reference.js")" type="text/javascript"></script>
}

<h2>Create a reference to  "@title"</h2>
<div id="content_createEnityReference">
    @using (Ajax.BeginForm("Create", "EntityReference", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "content_createEnityReference" }))
    {
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m => m.SourceId);
        @Html.HiddenFor(m => m.SourceTypeId);

        <table class="bx-table-form">
            <tr>
                <td>
                    Type
                </td>
                <td>
                    @Html.DropDownListFor(m => m.TargetType, typeList, "Select a type", new { @class = "bx-dropdown"})
                    @Html.ValidationMessageFor(m => m.TargetType)
                </td>
            </tr>
            <tr>
                <td>
                    Enity
                </td>
                <td>
                    @Html.DropDownListFor(m => m.Target, targetList, "Select a entity", new { @class = "bx-dropdown"})
                    @Html.ValidationMessageFor(m => m.Target)
                </td>
            </tr>
        </table>

        <div class="bx-footer right">
            <button style="margin-right: 1px" type="submit" class="bx-button action">Save</button>
            <button style="margin-left: 1px" type="button" id="button_createEntityreference_cancel" class="bx-button action">Cancel</button>
        </div>
    }
</div>

