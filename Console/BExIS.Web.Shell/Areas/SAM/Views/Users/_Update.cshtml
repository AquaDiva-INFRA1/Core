@using Telerik.Web.Mvc.UI
@model BExIS.Modules.Sam.UI.Models.UpdateUserModel

@using (Ajax.BeginForm("Update", "Groups", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "contentCreate", OnSuccess = "onSuccess" }))
{
    @(Html.Telerik().TabStrip()
        .Name("tabStripUser")
        .SelectedIndex(0)
        .Items(tabs =>
        {
            tabs.Add()
                .Text("Details")
                .Content(@<text>
                    @Html.Partial("_Details", Model)
                </text>);

tabs.Add()
        .Text("Membership")
        .Content(@<text>
            @Html.Partial("_Membership")
        </text>);

        })
    )

    <div class="bx-footer right">
        <button style="margin-right: 1px" type="submit" class="bx-button action">Save</button>
        <button style="margin-left: 1px" type="button" class="bx-button action">Cancel</button>
    </div>
}