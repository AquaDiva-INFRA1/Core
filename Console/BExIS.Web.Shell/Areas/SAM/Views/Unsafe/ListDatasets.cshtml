@using BExIS.Dlm.Entities.Data;
@model List<Dataset>

@{
    ViewBag.Title = "ListDatasets";
}
<h3>Datasets</h3>
<table>
    <tr>
        <td>ID</td>
        <td>Status</td>
        <td>Actions</td>       
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>@(item.Id)</td>

        @if (item.Status == DatasetStatus.CheckedIn) 
         { 
            <td style="color: darkgreen"> @(item.Status.ToString())</td>
            <td>@Html.ActionLink("Delete", "deleteDataset", new {id = item.Id})  | @Html.ActionLink("Purge", "purgeDataset", new {id = item.Id}) | @Html.ActionLink("Versions", "listDatasetVersions", new {id = item.Id}) </td>
         }
        else if (item.Status == DatasetStatus.CheckedOut) 
        {   
            <td style="color: darkblue"> @(item.Status.ToString())</td>
            <td>@Html.ActionLink("Purge", "purgeDataset", new {id = item.Id}) | @Html.ActionLink("Versions", "listDatasetVersions", new {id = item.Id}) </td>
        }
        else if (item.Status == DatasetStatus.Deleted) 
        { 
            <td style="color: red"> @(item.Status.ToString())</td>
            <td> @Html.ActionLink("Versions", "listDatasetVersions", new {id = item.Id}) </td>
        }

    </tr>    
}
</table>
