@model BExIS.Web.Shell.Areas.SAM.Models.UserPiCreateModel
@using (Ajax.BeginForm("Create", "UserPis", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "contentCreate", OnSuccess = "userPiCreate_onSuccess" }))
{
    @Html.ValidationSummary(true)

    <div id="tabs">

        <ul>
            <li><a href="#contentDetails">Details</a></li>
            @*<li><a href="#contentMembership">Membership</a></li>*@
        </ul>

        <div id="contentDetails">
            <table>
                <tr>
                    <td>
                        User
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.SelectedUserName, new SelectList(Model.UserList.Select(p=>p.Name)))
                    </td>
                </tr>
                <tr>
                    <td>
                        Pi
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.SelectedPiName, new SelectList(Model.PiUserList.Select(p=>p.Name)))
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <p>
        <button style="float: right; margin-left: 1px" type="button" onclick="windowCreate_onCancel()" class="t-button">Cancel</button>
        <button style="float: right; margin-right: 1px" type="submit" class="t-button">Save</button>
    </p>
}

<script type="text/javascript">
    $("#tabs").tabs();

    $(document).ready(function () {
        $.validator.unobtrusive.parse("#contentCreate");
    });
</script>