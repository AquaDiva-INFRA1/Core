@using Telerik.Web.Mvc.UI;
@using System;
@using BExIS.Modules.Asm.UI.Models;
@using BExIS.Modules.Rpm.UI.Models;

@{
    List<BExIS.Dlm.Entities.DataStructure.VariableTemplate> DataAttributeStruct_ = (List<BExIS.Dlm.Entities.DataStructure.VariableTemplate>)ViewData["DataAttributeStruct"];
}

@{
    string[] temp;
}

<!-- Modal -->

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Variable Templates</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    @(Html.Telerik().Grid(DataAttributeStruct_)
                                            .Name("bx-rpm-attributeGrid")
                                            .Columns(columns =>
                                            {
                                                columns.Bound(c => c.Id)
                                                    .Width(100);
                                                columns.Bound(c => c.Label)
                                                    .Width(100);
                                                columns.Bound(c => c.Unit.Name)
                                                    .Title("Unit");
                                                columns.Bound(c => c.DataType.Name)
                                                    .Title("Data Type");
                                                columns.Bound(c => c.Description);
                                            })
                                                        .ClientEvents(events => events.OnDataBound("onDataBound"))
                    )
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
