<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="BExIS.Dlm.Entities" namespace="BExIS.Dlm.Entities.DataStructure">
  <subclass name="Variable" extends="DataContainer" discriminator-value="VAR" dynamic-update="true">

    <many-to-one name="Classification" class="Classifier" not-null="false" column="ClassifierRef"/>
    
    <set name="ParameterUsages" inverse="true" cascade="all-delete-orphan">
      <key column="VariableRef" not-null="false"/>
      <one-to-many class="VariableParameterUsage"/>
    </set>

    <set name="StructuredDataUsages" inverse="true">
      <key column="VariableRef" not-null="false"/>
      <one-to-many class="StructuredDataVariableUsage"/>
    </set>

  </subclass>
  
</hibernate-mapping>