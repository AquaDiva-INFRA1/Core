<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="BExIS.Security.Entities" namespace="BExIS.Security.Entities.Objects">
  <class xmlns="urn:nhibernate-mapping-2.2" name="Task" table="Tasks" dynamic-update="true">

    <!-- Mapping BaseEntity properties -->
    <id name="Id" type="Int64">
      <column name="Id" index="idx_Tasks_id"/>
      <generator class="native" />
    </id>

    <version name="VersionNo" type="Int32">
      <column name="VersionNo" />
    </version>

    <property name="Extra" type="System.Xml.XmlDocument, System.Xml, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <column name="Extra" not-null="false" sql-type="xml" />
    </property>

    <property name="AreaName" type="String" >
      <column name="AreaName"/>
    </property>
    <property name="ControllerName" type="String" >
      <column name="ControllerName"/>
    </property>
    <property name="ActionName" type="String" >
      <column name="ActionName"/>
    </property>

    <!-- Mapping Action Associations -->
    <many-to-one name="Feature" column="FeatureRef" class="BExIS.Security.Entities.Objects.Feature, BExIS.Security.Entities"/>

  </class>

</hibernate-mapping>