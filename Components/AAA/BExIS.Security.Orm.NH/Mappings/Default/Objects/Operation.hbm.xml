<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="BExIS.Security.Entities" namespace="BExIS.Security.Entities.Objects">
  <class xmlns="urn:nhibernate-mapping-2.2" name="Operation" table="Operations" dynamic-update="true">

    <id name="Id" type="Int64">
      <generator class="native" />
    </id>

    <version name="VersionNo" type="Int32">
      <column name="VersionNo" />
    </version>

    <property name="Extra" type="System.Xml.XmlDocument, System.Xml, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <column name="Extra" not-null="false" sql-type="xml" />
    </property>

    <property name="Module" type="String" />
    <property name="Controller" type="String" />
    <property name="Action" type="String" />
    <many-to-one name="Workflow" column="WorkflowRef" class="BExIS.Security.Entities.Objects.Workflow, BExIS.Security.Entities" />
    <many-to-one name="Parent" column="ParentRef" class="BExIS.Security.Entities.Objects.Operation, BExIS.Security.Entities" />
    <set name="Children" inverse="true" cascade="save-update" lazy="true">
      <key column="ParentRef" />
      <one-to-many class="BExIS.Security.Entities.Objects.Operation, BExIS.Security.Entities" />
    </set>
  </class>
</hibernate-mapping>