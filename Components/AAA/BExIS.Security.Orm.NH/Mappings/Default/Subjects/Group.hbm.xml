<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="BExIS.Security.Entities" namespace="BExIS.Security.Entities.Subjects">
  <joined-subclass xmlns="urn:nhibernate-mapping-2.2" name="Group" table="Groups" extends="Subject" dynamic-update="true">

    <!-- Mapping Subject Properties -->
    <key column="Id"/>
    <!--An index should be on this field. E.g., index="idx_Groups_id"-->

    <!-- Role Entity Properties -->
    <property name="Description" type="String" />   

    <set name="Users" table="Groups_Users" cascade="save-update" lazy="true">
      <key column="GroupRef"/>
      <many-to-many column="UserRef" class="User"/>
    </set>

  </joined-subclass>

</hibernate-mapping>