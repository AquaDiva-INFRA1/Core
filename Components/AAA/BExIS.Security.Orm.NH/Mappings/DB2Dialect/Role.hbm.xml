<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="BExIS.Security.Entities" namespace="BExIS.Security.Entities">
  <joined-subclass xmlns="urn:nhibernate-mapping-2.2" name="Role" table="Roles" extends="Subject" dynamic-update="true">

    <!-- Mapping Subject Properties -->
    <key column="Id" />

    <!-- Role Entity Properties -->
    <property name="Description" type="String" />

    <set name="Users" table="Roles_Users" cascade="all-delete-orphan" lazy="true">
      <key column="RoleRef"/>
      <many-to-many column="UserRef" class="User"/>
    </set>

  </joined-subclass>

</hibernate-mapping>