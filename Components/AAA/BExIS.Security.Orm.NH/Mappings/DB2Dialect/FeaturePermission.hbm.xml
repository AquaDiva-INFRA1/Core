<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="BExIS.Security.Entities" namespace="BExIS.Security.Entities">
  <joined-subclass xmlns="urn:nhibernate-mapping-2.2" name="FeaturePermission" table="FeaturePermissions" extends="Permission" dynamic-update="true">

    <!-- Mapping Permission Properties -->
    <key column="Id" />

    <!-- Mapping Feature Permission Associations -->
    <many-to-one name="Feature" column="FeaturePermissionRef" class="Feature"/>
    

  </joined-subclass>

</hibernate-mapping>