<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="BExIS.Security.Entities" namespace="BExIS.Security.Entities">
  <class xmlns="urn:nhibernate-mapping-2.2" name="Feature" table="Features" dynamic-update="true">

    <!-- Mapping BaseEntity properties -->
    <id name="Id" type="Int64">
      <column name="Id" />
      <generator class="native" />
    </id>

    <version name="VersionNo" type="Int32">
      <column name="VersionNo" />
    </version>

    <property name="TimeStamp" type="DateTime">
      <column name="TimeStamp" />
    </property>

    <property name="Extra" type="System.Xml.XmlDocument, System.Xml, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <column name="Extra" not-null="false" sql-type="xml" />
    </property>

    <!-- Mapping entity properties -->
    <property name="Name" type="String" />
    <property name="LowerCaseName" type="String" />

    <component name="ActionInfo">
      <property name="Area" type="String">
        <column name="Area" />
      </property>
      <property name="Controller" type="String">
        <column name="Controller" />
      </property>
      <property name="Action" type="String">
        <column name="Action" />
      </property>
    </component>

    <many-to-one name="Parent" class="Feature" not-null="false" column="ParentRef"/>

    <set name="FeatureRules" lazy="true">
      <key column="FeatureRef"/>
      <one-to-many class="FeatureRule"/>
    </set>

  </class>

</hibernate-mapping>